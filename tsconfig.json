{
  "compilerOptions": {
    "target": "es5",
    "module": "es2020",
    "allowJs": true,
    "outDir": ".dist",
    "strict": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
